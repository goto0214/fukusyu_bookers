<% if flash[:notice] %>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-12 mx-auto mt-5">
      <div>
        <strong>Title:</strong>
        <%= @book.title %>
      </div>
      <div class="mt-5">
        <strong>Body:</strong>
        <%= @book.body %>
      </div>
    </div>
    <div class="mt-5">
      <%= link_to "Edit", edit_book_path(@book) %>
      |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>
