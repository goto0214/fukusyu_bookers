
<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @books.each do |book| %>
          <tbody>
            <tr>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
              <td><%= link_to "Show", book_path(book) %></td>
              <td><%= link_to "Edit", edit_book_path(book) %></td>
              <td><%= link_to "Destroy", book_path(book), method: :delete %></td>
            </tr>
          </tbody>
        <% end %>
      </table>

    <h1>New Book</h1>
    <%= form_with model:@create, local: true do |f| %>
      <%= f.label :title %>
      <div>
        <%= f.text_field :title %>
      </div>
      <%= f.label :body %>
      <div>
        <%= f.text_area :body %>
      </div>
      <%= f.submit "投稿" %>
    <% end %>
    </div>
  </div>
</div>