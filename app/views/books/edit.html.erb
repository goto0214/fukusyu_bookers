<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto mt-3">
      <h1>Edit Book</h1>
      <%= form_with model:@book, local: true do |f| %>
      <% if @book.errors.any? %>
        <div class="error">
         <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
         <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
         </ul>
        </div>
       <% end %>
        <%= f.label :title %>
        <div>
          <%= f.text_field :title %>
        </div>
        <%= f.label :body, class: "mt-3" %>
        <div>
          <%= f.text_area :body, class: "form-control", rows:"5" %>
        </div>
        <%= f.submit "Edit Book", class: "mt-3" %>
      <% end %>
      <div class="mt-5">
      <%= link_to "Show", book_path(@book) %>
      |
      <%= link_to "Back", books_path %>
    </div>
    </div>
  </div>
</div>