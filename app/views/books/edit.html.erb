<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto mt-3">
      <h1>Edit Book</h1>
      <%= form_with model:@book, local: true do |f| %>
        <%= f.label :title %>
        <div>
          <%= f.text_field :title %>
        </div>
        <%= f.label :body, class: "mt-3" %>
        <div>
          <%= f.text_area :body, class: "form-control", rows:"5" %>
        </div>
        <%= f.submit "Edit Book", class: "mt-3" %>
      <% end %>
    </div>
  </div>
</div>